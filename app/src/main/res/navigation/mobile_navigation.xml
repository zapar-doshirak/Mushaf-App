<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.mainscreen.ui.home.HomeFragment"
        android:label="@string/titleHome"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.mainscreen.ui.settings.SettingsFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_notes"
        android:name="com.example.mainscreen.ui.notes.NotesFragment"
        android:label="@string/titleNotes"
        tools:layout="@layout/fragment_notes" />


</navigation>